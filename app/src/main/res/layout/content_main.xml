<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.alagu.crunch.MainActivity"
        tools:showIn="@layout/activity_main"
        android:background="#3fa6e6"
        android:theme="@style/AppTheme"
        android:backgroundTint="#4dbcb1"
        style="@style/AppTheme">

        <TextView
            android:layout_marginTop="60dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your weight?                  (in pounds)"
            android:id="@+id/txtw"
            android:textSize="28sp"
            android:theme="@style/AppTheme"
            android:textStyle="bold"
            android:textColor="#122f68"/>

        <EditText
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txew"
            android:layout_below="@+id/txtw"
            android:textColor="#122f68"
            android:textSize="28sp"
            android:maxLength="3"
            android:onClick="getweight"/>


        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txew"
            android:text="What exercise did you do today?"
            android:id="@+id/txt"
            android:textSize="28sp"
            android:theme="@style/AppTheme"
            android:textStyle="bold"
            android:textColor="#122f68"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:id="@+id/txg"
            android:rowCount="6"
            android:columnCount="2">

            <Button
                android:layout_height="50dp"
                android:layout_width="165dp"
                android:textSize="18sp"
                android:background="#4849a5"
                android:textColor="#1fdab0"
                android:theme="@style/AppTheme"
                android:clickable="true"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Pushup"
                android:onClick="pushup"
                android:layout_margin="5dp"
                android:textAllCaps="false"/>
            <Button
                android:layout_height="50dp"
                android:layout_width="165dp"
                android:textSize="18sp"
                android:background="#4849a5"
                android:textColor="#1fdab0"
                android:theme="@style/AppTheme"
                android:clickable="true"
                android:layout_column="1"
                android:layout_row="0"
                android:text="Situp"
                android:onClick="situp"
                android:layout_margin="5dp"
                android:textAllCaps="false"/>
            <Button
                android:layout_height="50dp"
                android:layout_width="165dp"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:background="#4849a5"
                android:textColor="#1fdab0"
                android:theme="@style/AppTheme"
                android:clickable="true"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Squats"
                android:onClick="squats"
                android:textAllCaps="false"/>
            <Button
                android:layout_height="50dp"
                android:layout_width="165dp"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:background="#4849a5"
                android:textColor="#1fdab0"
                android:theme="@style/AppTheme"
                android:clickable="true"
                android:layout_column="1"
                android:layout_row="1"
                android:text="Leg_lift"
                android:onClick="leglift"
                android:textAllCaps="false"/>
            <Button
                android:layout_height="50dp"
                android:layout_width="165dp"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:background="#4849a5"
                android:textColor="#1fdab0"
                android:theme="@style/AppTheme"
                android:clickable="true"
                android:layout_column="0"
                android:layout_row="2"
                android:text="Plank"
                android:onClick="plank"
                android:textAllCaps="false"/>
            <Button
                android:layout_height="50dp"
                android:layout_width="165dp"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:background="#4849a5"
                android:textColor="#1fdab0"
                android:theme="@style/AppTheme"
                android:clickable="true"
                android:layout_column="1"
                android:layout_row="2"
                android:text="Jumping Jacks"
                android:onClick="jumpingjacks"
                android:textAllCaps="false"/>
            <Button
                android:layout_height="50dp"
                android:layout_width="165dp"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:background="#4849a5"
                android:textColor="#1fdab0"
                android:theme="@style/AppTheme"
                android:clickable="true"
                android:layout_column="0"
                android:layout_row="3"
                android:text="Pullup"
                android:onClick="pullup"
                android:textAllCaps="false"/>
            <Button
                android:layout_height="50dp"
                android:layout_width="165dp"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:background="#4849a5"
                android:textColor="#1fdab0"
                android:theme="@style/AppTheme"
                android:clickable="true"
                android:layout_column="1"
                android:layout_row="3"
                android:text="Cycling"
                android:onClick="cycling"
                android:textAllCaps="false"/>
            <Button
                android:layout_height="50dp"
                android:layout_width="165dp"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:background="#4849a5"
                android:textColor="#1fdab0"
                android:theme="@style/AppTheme"
                android:clickable="true"
                android:layout_column="0"
                android:layout_row="4"
                android:text="Walking"
                android:onClick="walking"
                android:textAllCaps="false"/>
            <Button
                android:layout_height="50dp"
                android:layout_width="165dp"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:background="#4849a5"
                android:textColor="#1fdab0"
                android:theme="@style/AppTheme"
                android:clickable="true"
                android:layout_column="1"
                android:layout_row="4"
                android:text="Jogging"
                android:onClick="jogging"
                android:textAllCaps="false"/>
            <Button
                android:layout_height="50dp"
                android:layout_width="165dp"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:background="#4849a5"
                android:textColor="#1fdab0"
                android:theme="@style/AppTheme"
                android:clickable="true"
                android:layout_column="0"
                android:layout_row="5"
                android:text="Swimming"
                android:onClick="swimming"
                android:textAllCaps="false"/>
            <Button
                android:layout_height="50dp"
                android:layout_width="165dp"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:background="#4849a5"
                android:textColor="#1fdab0"
                android:theme="@style/AppTheme"
                android:clickable="true"
                android:layout_column="1"
                android:layout_row="5"
                android:text="Stair-Climbing"
                android:onClick="stairclimbing"
                android:textAllCaps="false"/>

        </GridLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/ima"
            android:layout_below="@+id/txg"
            android:src="@drawable/ex"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ima"
            android:id="@+id/txv"
            android:layout_centerHorizontal="true"
            android:text="Or, enter how many calories do you want to burn"
            android:textSize="28dp"
            android:theme="@style/AppTheme"
            android:textStyle="bold"
            android:textColor="#122f68"
            android:layout_margin="1dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txe"
            android:layout_below="@+id/txv"
            android:textColor="#122f68"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:maxLength="5"
            android:layout_margin="5dp"
            android:onClick="givencal"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="24sp"
            android:background="#4849a5"
            android:textColor="#1fdab0"
            android:theme="@style/AppTheme"
            android:layout_below="@+id/txe"
            android:layout_centerHorizontal="true"
            android:text="Find out how much you have to work out"
            android:clickable="true"
            android:onClick="givencal"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

    </RelativeLayout>
</ScrollView>